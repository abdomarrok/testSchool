<?xml version="1.0" encoding="utf-8"?>
<!-- Intro -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/intro"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/school_color"
    android:clipToOutline="true"
    app:layout_anchorGravity="center|center_horizontal|center_vertical">


    <RelativeLayout
        android:id="@+id/undraw_soci"
        android:layout_width="249dp"
        android:layout_height="249dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="87dp"
        android:layout_marginTop="127dp"
        android:clipToOutline="true">

        <ImageView
            android:id="@+id/group"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/mainlogo"></ImageView>

    </RelativeLayout>

    <View
        android:id="@+id/rectangle"
        android:layout_width="304.75dp"
        android:layout_height="303.88dp"
        android:layout_marginTop="72.44dp"
        android:background="@drawable/rectangle" />

    <View
        android:id="@+id/rectangle1"
        android:layout_width="200.22dp"
        android:layout_height="182.95dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="290dp"
        android:layout_marginTop="-30dp"
        android:background="@drawable/rectangle"
        android:rotation="90" />

    <View
        android:id="@+id/group1"
        android:layout_width="117dp"
        android:layout_height="66.06dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="131dp"
        android:layout_marginTop="417dp"
        android:background="@drawable/underlogo" />

    <TextView
        android:id="@+id/school_mana"
        android:layout_width="339dp"
        android:layout_height="78dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="499dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center_horizontal"
        android:text="@string/school_mana"
        android:textAppearance="@style/school_mana" />

    <TextView
        android:id="@+id/the_best_sc"
        android:layout_width="276dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="66dp"
        android:layout_marginTop="561dp"
        android:gravity="top"
        android:text="The best School  platform for Schools who cares about their student\u00E2\u0080\u0099s success"
        android:textAppearance="@style/the_best_sc" />

    <RelativeLayout
        android:id="@+id/rectangle_2"
        android:layout_width="273dp"
        android:layout_height="54dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="68dp"
        android:layout_marginTop="642dp"
        android:background="@drawable/rectangle2">

        <TextView
            android:id="@+id/get_started"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:gravity="center"
            android:text="@string/get_started"
            android:textAppearance="@style/get_started" />

    </RelativeLayout>


</RelativeLayout>