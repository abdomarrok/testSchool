<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/m_student_cardview"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    app:cardElevation="10dp"
    android:layout_margin="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/Student_item_height"
                android:orientation="horizontal"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true">
            <ImageView
                android:id="@+id/student_img"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:src="@color/white"/>
            <TextView
                android:layout_marginLeft="@dimen/total_font_size"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/studentName"
                android:gravity="center"
                android:text="StudnetName"
                android:textSize="@dimen/total_font_size"
                android:textStyle="bold"/>
            </LinearLayout>
</androidx.cardview.widget.CardView>
